[Unit]
Description=VyOS VM Network Automation API
After=network.target

[Service]
User=vyos  # or your user
WorkingDirectory=/opt/vyos-api
ExecStart=/opt/vyos-api/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8800
Restart=always
EnvironmentFile=/opt/vyos-api/.env

[Install]
WantedBy=multi-user.target
